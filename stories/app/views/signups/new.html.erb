<div class="signup">
    <div class="container">
        <h1>Get the latest updates from Stories</h1>
        <div class="col-md-4 col-md-offset-4">
            <%= form_for(@signup) do |f| %>  
                <div class="field">
                    <%= f.label :Firstname %>
                    <%= f.text_field :firstname,:type=>"text", :class=>"form-control" %> 
                    <%= f.label :Email %> 
                    <%= f.text_field :email,:type=>"text", :class=>"form-control" %> 
                </div> 
                <div class="actions"> 
                    <%= f.submit "Join" %> 
                </div> 
            <% end %>
        </div>
    </div>
</div>